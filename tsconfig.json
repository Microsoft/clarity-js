{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es2015", "dom"],
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "suppressImplicitAnyIndexErrors": true,
        "baseUrl": ".",
        "paths": {
            "@src/*": ["src/*"],
            "@decode/*": ["decode/*"],
            "@karma/*": ["karma/*"],
            "@clarity-types/*": ["types/*"]
        }
    },
    "include":[
       "src/**/*.ts",
       "decode/**/*.ts",
       "types/**/*.d.ts",
       "karma/**/*.ts",
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}
